  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\InternetArchive.NET\InternetArchive.NET.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.private.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
